<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/notificationbarcolor</item>
        <item name="colorAccent">@color/toolbarcolor</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>



    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/notificationbarcolor</item>
        <item name="colorAccent">@color/toolbarcolor</item>
        <item name="android:background">@color/toolbarcolor</item>
        <item name="android:logo">@drawable/ic_logo</item>

        <!-- Support library compatibility -->
        <item name="background">@color/toolbarcolor</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>




</resources>
