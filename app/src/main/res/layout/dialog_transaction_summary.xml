<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/grey"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">

            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_logo"
                android:layout_marginLeft="10dp"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialogTitle"
                android:text="Transaction Summary"
                android:textColor="@color/dialogtitletext"
                android:textSize="@dimen/abc_text_size_large_material"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal|center_vertical"/>

        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:background="@drawable/greybackground"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Pickup Address"
                android:layout_marginTop="10dp"/>

            <TextView android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/source"
                android:hint="Source Address"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:autoText="false"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Drop Address"
                android:layout_marginTop="10dp"/>

            <TextView android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/destination"
                android:hint="Destination Address"
                android:background="#f3f3f3"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Booking Time"
                android:layout_marginTop="10dp"/>

            <TextView android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/trans_time"
                android:hint="Time"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Distance Covered in km"
                android:layout_marginTop="10dp"/>

            <TextView android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/distance"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Ride Duration in mins"
                android:layout_marginTop="10dp"/>
            <TextView android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/duration"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Distance Charges"
                android:layout_marginTop="10dp"/>

            <TextView android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/distanceCost"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Ride Duration Charges"
                android:layout_marginTop="10dp"/>
            <TextView android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/durationCost"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Toll Tax"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tolltax"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Total Fare"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/fare"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:gravity="center" />

            <Button
                android:id="@+id/ride_summary_close"
                android:layout_width="190dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn"
                android:text="Close"
                android:textColor="#fff" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>